@model IEnumerable<GC_PlanMyMeal.Models.ViewModel.SavedRecipeListViewModel>
@{
    ViewBag.Title = "Saved Recipes";
}

<button type="button" class="btn btn-success" onclick="location.href='@Url.Action("CreateRecipePage", "Recipe")">Create My Own Recipe</button>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RecipeId</td>
                <td>@item.Name</td>
                <td><img src=@item.ImageURL></td>
                <td>
                    <button type="button" class="btn btn-success" onclick="window.open('@item.RecipeURL', '_blank')">More Info</button>
                    <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("DeleteSavedRecipe", "Recipe", item)'">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
