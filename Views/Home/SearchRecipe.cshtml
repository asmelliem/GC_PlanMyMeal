@model List<RecipeSearchResult>

@{
    ViewData["Title"] = "Here's Your Recipe!";
}


<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Image</th>
            <th>Save Recipe</th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td><img src="@item.Image" /></td>
                <td>
                    @if(User.Identity.IsAuthenticated)
                    {
                        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("ConfirmSaveRecipe","Home", new { id = @item.Id })'">Save Recipe</button>
                    }

                    @if(!User.Identity.IsAuthenticated)
                    {
                        <p>Please login to save recipe</p>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>