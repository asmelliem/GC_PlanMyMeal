@model GC_PlanMyMeal.Models.ViewModel.DisplayCustomRecipeInfoModelView

<h2 class="text-center">@Model.RecipeName</h2>
<body class="shadow p-3 mb-5 bg-white rounded">
    <div class="container">
        <div class="row">
            <div class="col">
                <h3>Directions</h3>
                @Model.Directions
                <h3>Notes</h3>
                @Model.Notes
            </div>
            <div class="col">
                
                <h3>Ingredients</h3>
                <ul>
                    @foreach (var ingredient in @Model.Ingredients)
                    {
                        <li>@ingredient</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</body>


